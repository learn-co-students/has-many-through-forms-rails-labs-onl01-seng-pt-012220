
<%= form_for post do |f| %>
    <%= f.label :title %>
    <%= f.text_area :title %>
    <%= f.label :content %>
    <%= f.text_area :content %>
    <%= f.label :category_ids %>
    <%= f.collection_checkbox :category_ids, Category.all, :id, :name %>
    <%= f.label :category %>
    <%= f.fields_for :category, post.categories.build do |categories_fields| %>
        <%= categories_fields.text_field :name %>
    <% end %>
    <% f.submit %>
<% end %>